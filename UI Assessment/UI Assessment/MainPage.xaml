<Page
    x:Class="UI_Assessment.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UI_Assessment"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image HorizontalAlignment="Left" Height="1000" VerticalAlignment="Center" Width="1778" Source="/Assets/Game Splash Screen.png" Margin="-144,0,0,0"/>
        <Button x:Name="Go_To_Unit_Screen" Content="Go To Units" Height="187" Margin="1056,0,0,0" VerticalAlignment="Top" Width="434" FontSize="48" Click="Go_To_Unit_Screen_Click"/>
        <TextBlock x:Name="Title_Name" HorizontalAlignment="Left" Height="187" Text="[GAME NAME]" TextWrapping="Wrap" VerticalAlignment="Top" Width="1051" FontSize="100" FontWeight="Bold" TextDecorations="Underline"/>

    </Grid>
</Page>
